@model Author

<h1>Delete author</h1>

<form method="post" asp-controller="Author" asp-action="Delete">
    <div class="form-group" style="width: 40%">
        <label asp-for="FirstName" class="m-1">First name</label>
        <input disabled asp-for="FirstName" class="form-control m-1" placeholder="First name">
    </div>
    <div class="form-group" style="width: 40%">
        <label asp-for="LastName" class="m-1">Last name</label>
        <input disabled asp-for="LastName" class="form-control m-1" placeholder="Last name">
    </div>
    <div class="form-group" style="width: 40%">
        <label asp-for="Birthday" class="m-1">Birthday</label>
        <input disabled type="date" asp-for="Birthday" class="form-control m-1">
    </div>
    <button type="submit" class="btn btn-danger m-2">Delete</button>
    <a asp-controller="Author" asp-action="Index" class="btn btn-secondary m-2">Back</a>
</form>