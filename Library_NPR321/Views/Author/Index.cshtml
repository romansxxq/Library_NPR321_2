@model IEnumerable<Author>

<div>
    <div class="container d-flex p-2">
        <h1>Автори</h1>
        <div style="text-align: right; flex-grow: 1;">
            <a asp-controller="Author" asp-action="Create" class="btn btn-secondary">Add author</a>
        </div>
    </div>
    @if(Model.Count() > 0)
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        First name
                    </th>
                    <th>
                        Last name
                    </th>
                    <th>
                       Birthday
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach(var author in Model)
                {
                    <tr style="vertical-align: middle;">
                        <td style="width: 30%;">
                            @author.FirstName
                        </td>
                        <td style="width: 30%;">
                            @author.LastName
                        </td>
                        <td style="width: 20%;">
                            @author.Birthday.ToString("dd.MM.yyyy")
                        </td>
                        <td style="width: 20%;" class="p-3">
                            <a asp-controller="Author" asp-action="Update" asp-route-Id="@author.Id" class="btn btn-success mx-2">Edit</a>
                            <a asp-controller="Author" asp-action="Delete" asp-route-Id="@author.Id" class="btn btn-danger mx-2">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h2 style="color: red; font-style: italic;">Authors not found</h2>
    }
</div>